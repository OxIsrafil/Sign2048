{
  "compilerOptions": {
    "target": "ES2022",                          // ðŸ”¥ Better async/await & ESM
    "module": "ESNext",                          // âœ… Required for native ESM
    "moduleResolution": "Node",                 // âœ… Works with modern packages
    "lib": ["dom", "dom.iterable", "esnext"],

    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "types": ["node"],                          // âœ… Fixes Node.js type issues
    "allowSyntheticDefaultImports": true        // âœ… Helps with ESM interop
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
